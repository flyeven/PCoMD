<UserControl x:Class="CalendarSyncPlus.Presentation.Views.WhatsNewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:richTextBox="clr-namespace:CalendarSyncPlus.Presentation.Controls.RichTextBox"
             xmlns:viewModels="clr-namespace:CalendarSyncPlus.Application.ViewModels;assembly=CalendarSyncPlus.Application"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance viewModels:WhatsNewViewModel}" Margin="20">
    <Grid>
        <richTextBox:BindableHtmlRichTextBox Text="{Binding Text}" VerticalScrollBarVisibility="Auto"
                                             TextFormatterType="Rtf" />
    </Grid>
</UserControl>